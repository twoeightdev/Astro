;---------------------------------------
;  COLORS
;---------------------------------------

[colors]
bgcolor = #161821
fgcolor = #e5e9f0
bgalert = #bf616a

;---------------------------------------
;  GLOBAL
;---------------------------------------


[bar/koltea]
monitor = ${env:MONITOR:}
width = 100%
height = 20
bottom = false

offset-x = 0
offset-y = 0

border-size = 4
border-color = ${colors.bgcolor}

background = ${colors.bgcolor}
foreground = ${colors.fgcolor}

tray-position = right
tray-padding = 2
tray-background = ${colors.bgcolor}

;wm-restack = bspwm

;---------------------------------------
;  FONTS
;---------------------------------------

font-0 = Hack Nerd Font:weight=medium:size=10;3

;---------------------------------------
;      MODULES LAYOUT
;---------------------------------------

modules-left =date mpd
modules-right = xwindow memory pulseaudio
modules-center = workspaces temperature
;---------------------------------------
;       BSPWM MODULE
;---------------------------------------
[module/memory]
type = internal/memory
; Seconds to sleep between updates
; Default: 1
interval = 3
format = <label>
label = ï¬™ %gb_used%  
format-foreground = ${colors.fgcolor}
format-background = ${colors.bgcolor}
format-padding = 1

[module/cpu]
type = internal/cpu 

; Seconds to sleep between updates
; Default: 1
interval = 1
format = <label>
label = ï§„ %percentage%%
format-foreground = ${colors.fgcolor}
format-background = ${colors.bgcolor}
format-padding = 1

[module/mpd]
type = internal/mpd
